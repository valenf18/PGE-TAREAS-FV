<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiExcepciones.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiExcepciones.Pages">

    <FlyoutItem Title="Calculadora segura">
        <ShellContent Title="Parte 1" ContentTemplate="{DataTemplate pages:CalculatorPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Recursos locales">
        <ShellContent Title="Parte 2" ContentTemplate="{DataTemplate pages:FileManagerPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Login simulado">
        <ShellContent Title="Parte 3" ContentTemplate="{DataTemplate pages:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Excepciones comunes">
        <ShellContent Title="Parte 4" ContentTemplate="{DataTemplate pages:ExceptionsPage}" />
    </FlyoutItem>
</Shell>
